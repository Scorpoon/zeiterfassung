<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet author="seber" id="add-settings">
        <preConditions>
            <not>
                <tableExists tableName="time_entry_settings" />
            </not>
        </preConditions>

        <createSequence sequenceName="time_entry_settings_seq" incrementBy="50"/>

        <createTable tableName="time_entry_settings">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TIME_ENTRY_SETTINGS"/>
            </column>
            <column name="tenant_id" type="VARCHAR(8)">
                <constraints nullable="false"/>
            </column>
            <column name="time_entry_freeze_enabled" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="time_entry_freeze_value" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="time_entry_freeze_unit" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
            constraintName="FK_TIME_ENTRY_SETTINGS_TENANT_ID__TENANT_ID"
            baseColumnNames="tenant_id"
            baseTableName="time_entry_settings"
            referencedColumnNames="tenant_id"
            referencedTableName="tenant"
            deferrable="false"
            initiallyDeferred="false"
            onDelete="CASCADE"
            onUpdate="NO ACTION"
        />
    </changeSet>

    <changeSet id="enable-row-level-security-on-time-entry-settings" author="seber">
        <sql dbms="postgresql">
            ALTER TABLE time_entry_settings ENABLE ROW LEVEL SECURITY;
            DROP POLICY IF EXISTS time_entry_settings_tenant_isolation_policy ON time_entry_settings;
            CREATE POLICY time_entry_settings_tenant_isolation_policy ON time_entry_settings
                USING (tenant_id = current_setting('app.tenant_id')::VARCHAR);
        </sql>
    </changeSet>

</databaseChangeLog>

