<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet author="honnel" id="change-type-tenant-id">

        <preConditions>
            <tableExists tableName="time_entry"/>
            <tableExists tableName="time_clock"/>
            <tableExists tableName="tenant_user"/>
        </preConditions>

        <sql dbms="postgresql">
            DROP POLICY IF EXISTS time_clock_tenant_isolation_policy ON time_clock;
        </sql>
        <dropForeignKeyConstraint baseTableName="time_clock" constraintName="FK_TENANT_CLOCK_TENANT_ID"/>
        <modifyDataType columnName="tenant_id" newDataType="VARCHAR(255)" tableName="time_clock"/>
        <addForeignKeyConstraint baseColumnNames="tenant_id" baseTableName="time_clock" constraintName="FK_TENANT_CLOCK_TENANT_ID"
                                 deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="tenant_id" referencedTableName="tenant"/>
        <sql dbms="postgresql">
            CREATE POLICY time_clock_tenant_isolation_policy ON time_clock USING (tenant_id = current_setting('app.tenant_id')::VARCHAR);
        </sql>

        <sql dbms="postgresql">
            DROP POLICY IF EXISTS tenant_user_tenant_isolation_policy ON tenant_user;
        </sql>
        <dropForeignKeyConstraint baseTableName="tenant_user" constraintName="FK_TENANT_USER_TENANT_ID"/>
        <modifyDataType columnName="tenant_id" newDataType="VARCHAR(255)" tableName="tenant_user"/>
        <addForeignKeyConstraint baseColumnNames="tenant_id" baseTableName="tenant_user" constraintName="FK_TENANT_USER_TENANT_ID"
                                 deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="tenant_id" referencedTableName="tenant"/>
        <sql dbms="postgresql">
            CREATE POLICY tenant_user_tenant_isolation_policy ON tenant_user USING (tenant_id = current_setting('app.tenant_id')::VARCHAR);
        </sql>


        <sql dbms="postgresql">
            DROP POLICY IF EXISTS time_entry_tenant_isolation_policy ON time_entry;
        </sql>
        <dropForeignKeyConstraint baseTableName="time_entry" constraintName="FK_TIME_ENTRY_TENANT_ID"/>
        <modifyDataType columnName="tenant_id" newDataType="VARCHAR(255)" tableName="time_entry"/>
        <addForeignKeyConstraint baseColumnNames="tenant_id" baseTableName="time_entry" constraintName="FK_TIME_ENTRY_TENANT_ID"
                                 deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION"
                                 referencedColumnNames="tenant_id" referencedTableName="tenant"/>
        <sql dbms="postgresql">
            CREATE POLICY time_entry_tenant_isolation_policy ON time_entry USING (tenant_id = current_setting('app.tenant_id')::VARCHAR);
        </sql>
    </changeSet>
</databaseChangeLog>
